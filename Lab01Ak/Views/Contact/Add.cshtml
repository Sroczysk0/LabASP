@{
}

<h2>Add a contact: </h2>

<div class="col-6">
    <form asp-action="Add" asp-controller="Contact" method="post" >
        <div>
            <label class ="form-label" asp-for="FirstName">First name:</label>
            <input  class = "form-control" asp-for="FirstName" type="text"/>
            <span asp-validation-for="FirstName"></span>
        </div>
        <div>
            <label class="form-label" asp-for="LastName">Last name:</label>
            <input class="form-control"  asp-for="LastName" type="text" />
            <span asp-validation-for="LastName"></span>
        </div>
        <div>
            <label class="form-label"  asp-for="Email">Email:</label>
            <input class="form-control"  asp-for="Email" type="email" />
            <span asp-validation-for="FirstName"></span>
        </div>
        <div>
            <label class="form-label"  asp-for="PhoneNumber">Phone number:</label>
            <input class="form-control"  asp-for="PhoneNumber" type="tel" />
            <span asp-validation-for="PhoneNumber"></span>
        </div>
        <div>
            <label class="form-label"  asp-for="BirthDate">Birth date:</label>
            <input class="form-control"  asp-for="BirthDate" type="date" />
            <span asp-validation-for="BirthDate"></span>
        </div>


        <button type="submit" class="btn btn-outline-primary">Add</button>
    </form>

</div>